<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp">

        <requestFocus />
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_margin="@dimen/scf_text_margin_horizontal" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/scf_text_margin_horizontal"
        android:layout_marginRight="@dimen/scf_text_margin_horizontal" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginLeft="@dimen/scf_text_margin_horizontal"
        android:layout_marginRight="@dimen/scf_text_margin_horizontal"
        android:layout_marginTop="@dimen/scf_text_margin_vertical"
        android:textStyle="bold" />
</merge>